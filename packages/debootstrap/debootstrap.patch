@@ -3,7 +3,7 @@
 
 VERSION='@VERSION@'
 
-unset TMP TEMP TMPDIR || true
+unset LD_PRELOAD TMP TEMP TMPDIR || true
 
 # might not be exported if we're running from init=/bin/sh or similar
 export PATH
@@ -14,7 +14,7 @@
 	if [ -x /debootstrap/debootstrap ]; then
 		DEBOOTSTRAP_DIR=/debootstrap
 	else
