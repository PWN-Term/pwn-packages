+case $HOST_ARCH in
+	arm)
+		HOST_ARCH=armel
+		;;
+	aarch64)
+		HOST_ARCH=arm64
+		;;
+	i686)
+		HOST_ARCH=i386
+		;;
+	x86_64)
+		HOST_ARCH=amd64
+		;;
